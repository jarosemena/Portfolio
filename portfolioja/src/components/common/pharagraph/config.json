{
    "formatting": {
      "bold": {
        "symbol": "**",
        "style": "bold"
      },
      "italic": {
        "symbol": "_",
        "style": "italic"
      },
      "highlight": {
        "symbol": "==",
        "style": "highlight"
      }
    },
    "rendering": {
      "bold": "(children) => <span className=\"text-slate-200 font-medium\">{children} </span>",
      "italic": "(children) => <em>{children}</em>",
      "highlight": "(children) => <span style={{ backgroundColor: '#ff0' }}>{children}</span>"
    }
  }